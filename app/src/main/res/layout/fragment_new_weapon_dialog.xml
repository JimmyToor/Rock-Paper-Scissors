<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/img_weapon1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="@string/image_for_new_weapon_1"
        android:scaleX="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/edit_weapon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_weapon"
        android:inputType="textAutoComplete"
        android:paddingLeft="@dimen/list_item_spacing"
        android:paddingTop="@dimen/list_item_spacing_half"
        android:paddingRight="@dimen/list_item_spacing"
        android:paddingBottom="@dimen/list_item_spacing_half"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/img_weapon1"
        app:layout_constraintTop_toTopOf="@id/img_weapon1"
        tools:text="Hello"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/img_weapon2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image_for_new_weapon_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_weapon1"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/edit_weapon1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_weapon"
        android:inputType="textAutoComplete"
        android:paddingLeft="@dimen/list_item_spacing"
        android:paddingTop="@dimen/list_item_spacing_half"
        android:paddingRight="@dimen/list_item_spacing"
        android:paddingBottom="@dimen/list_item_spacing_half"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/img_weapon2"
        app:layout_constraintTop_toTopOf="@id/img_weapon2"
        tools:text="Hello"
        android:autofillHints="" />

</androidx.constraintlayout.widget.ConstraintLayout>